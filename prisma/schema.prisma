// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String           @id
  email     String?
  name      String?
  picture   String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  memberships CompanyMember[]
  companies   Company[]      @relation("CompanyCreatedBy")
}

model Company {
  id                 String           @id @default(cuid())
  name               String
  hqCountry          String
  employeeCountBand  String
  sectors            Json
  regulatorFeeds     Json
  policySnapshots    Json
  riskStance         RiskStance
  notificationChannel NotificationChannel
  summaryCadence     SummaryCadence
  onboardingCompletedAt DateTime?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  createdByUserId    String

  createdBy          User             @relation("CompanyCreatedBy", fields: [createdByUserId], references: [id])
  members            CompanyMember[]
  insights           RegulationInsight[]
}

model CompanyMember {
  id         Int           @id @default(autoincrement())
  companyId  String
  userId     String
  role       CompanyRole   @default(MEMBER)
  status     MemberStatus  @default(PENDING)
  invitedBy  String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  company    Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([companyId, userId])
}

enum CompanyRole {
  OWNER
  ADMIN
  MEMBER
}

enum MemberStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

enum RiskStance {
  CONSERVATIVE
  BALANCED
  AGGRESSIVE
}

enum NotificationChannel {
  SLACK
  TEAMS
  EMAIL
}

enum SummaryCadence {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

model RegulationInsight {
  id            String        @id @default(cuid())
  companyId     String
  title         String
  summary       String
  actionItems   Json
  notifiedTeams Json
  riskLevel     String
  status        InsightStatus @default(NEW)
  archivedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

enum InsightStatus {
  NEW
  ASSIGNED
  DONE
}
